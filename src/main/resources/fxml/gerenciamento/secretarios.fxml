<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxWidth="Infinity" spacing="37.0" stylesheets="@../../css/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.carvalhotechsolutions.mundoanimal.controllers.gerenciamento.SecretarioController">
    <padding>
        <Insets bottom="37.0" left="37.0" right="37.0" top="37.0" />
    </padding>
    <children>
        <Button mnemonicParsing="false" onAction="#abrirModalCadastrarSecretario" styleClass="default_btn">
            <graphic>
                <HBox alignment="CENTER" spacing="5.0">
                    <children>
                        <FontAwesomeIcon glyphName="PLUS" size="26px" styleClass="white_icon" />
                        <Label styleClass="white_bold_text" text="Cadastrar Secretário(a)" />
                    </children>
                </HBox>
            </graphic>
            <padding>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
            </padding>
        </Button>
        <TableView fx:id="tableView" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="nomeColumn">
                    <graphic>
                        <Label text="Nome de usuário" />
                    </graphic>
                </TableColumn>
                <TableColumn fx:id="phoneColumn">
                    <graphic>
                        <Label text="Telefone" />
                    </graphic>
                </TableColumn>
                <TableColumn fx:id="acaoColumn" sortable="false">
                    <graphic>
                        <Label text="Ação" />
                    </graphic>
                </TableColumn>
            </columns>
        </TableView>
    </children>
</VBox>
