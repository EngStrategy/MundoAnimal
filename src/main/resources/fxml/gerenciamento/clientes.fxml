<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox stylesheets="@../../css/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.carvalhotechsolutions.mundoanimal.controllers.gerenciamento.ClienteController">
   <children>
      <VBox spacing="30.0" VBox.vgrow="ALWAYS">
         <padding>
            <Insets left="37.0" right="37.0" top="37.0" />
         </padding>
         <children>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Button mnemonicParsing="false" onAction="#abrirModalCadastrarCliente" styleClass="default_btn">
                     <graphic>
                        <HBox alignment="CENTER" spacing="5.0">
                           <children>
                              <FontAwesomeIcon glyphName="PLUS" size="26px" styleClass="white_icon" />
                              <Label styleClass="white_bold_text" text="Cadastrar Cliente" />
                           </children>
                        </HBox>
                     </graphic>
                     <padding>
                        <Insets bottom="8.0" left="10.0" right="10.0" top="8.0" />
                     </padding>
                  </Button>
                  <HBox alignment="CENTER_RIGHT" maxHeight="-Infinity" spacing="15.0" HBox.hgrow="ALWAYS">
                     <children>
                        <TextField fx:id="filterField" maxWidth="-Infinity" minHeight="-Infinity" prefHeight="47.0" prefWidth="240.0" promptText="🔍 Buscar..." styleClass="search_input" />
                     </children>
                  </HBox>
               </children>
            </HBox>
            <TableView fx:id="tableView" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="nomeColumn">
                     <graphic>
                        <Label text="Nome" />
                     </graphic>
                  </TableColumn>
                  <TableColumn fx:id="telefoneColumn">
                     <graphic>
                        <Label text="Telefone" />
                     </graphic>
                  </TableColumn>
                  <TableColumn fx:id="petsColumn">
                     <graphic>
                        <Label text="Pets" />
                     </graphic>
                  </TableColumn>
                  <TableColumn fx:id="acaoColumn" sortable="false">
                     <graphic>
                        <Label text="Ação" />
                     </graphic>
                  </TableColumn>
               </columns>
            </TableView>
         </children>
      </VBox>
      <VBox VBox.vgrow="NEVER">
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets bottom="16.0" left="37.0" right="37.0" top="16.0" />
         </padding>
         <children>
            <HBox alignment="CENTER_RIGHT" maxHeight="52.0" minHeight="52.0">
               <children>
                  <HBox alignment="CENTER_RIGHT" maxHeight="52.0" minHeight="52.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label fx:id="numberOfResults" minWidth="450.0" styleClass="" text="0 registros retornados">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                        <Pagination fx:id="paginator" maxHeight="52.0" maxPageIndicatorCount="3" minHeight="52.0" prefHeight="52.0" style="-fx-page-information-visible: false;" HBox.hgrow="ALWAYS">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                           <padding>
                              <Insets bottom="1.0" />
                           </padding>
                        </Pagination>
                        <HBox fx:id="feedbackContainer" alignment="CENTER_RIGHT" minWidth="450.0" />
                     </children></HBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>
