<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxWidth="Infinity" spacing="37.0" stylesheets="@../../css/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.carvalhotechsolutions.mundoanimal.controllers.gerenciamento.ClienteController">
    <padding>
        <Insets bottom="46.0" left="37.0" right="37.0" top="37.0" />
    </padding>
    <children>
        <HBox alignment="CENTER_LEFT" minHeight="62.0">
            <children>
                <Button mnemonicParsing="false" onAction="#abrirModalCadastrarCliente" styleClass="default_btn">
                    <graphic>
                        <HBox alignment="CENTER" spacing="5.0">
                            <children>
                                <FontAwesomeIcon glyphName="PLUS" size="26px" styleClass="white_icon" />
                                <Label styleClass="white_bold_text" text="Cadastrar Cliente" />
                            </children>
                        </HBox>
                    </graphic>
                    <padding>
                        <Insets bottom="8.0" left="10.0" right="10.0" top="8.0" />
                    </padding>
                </Button>
                <!-- Container para o popup -->
                <HBox fx:id="feedbackContainer" alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
               <children>
                  <TextField fx:id="filterField" />
               </children></HBox>
            </children>
        </HBox>
        <TableView fx:id="tableView" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="nomeColumn">
                    <graphic>
                        <Label text="Nome" />
                    </graphic>
                </TableColumn>
                <TableColumn fx:id="telefoneColumn">
                    <graphic>
                        <Label text="Telefone" />
                    </graphic>
                </TableColumn>
                <TableColumn fx:id="petsColumn">
                    <graphic>
                        <Label text="Pets" />
                    </graphic>
                </TableColumn>
                <TableColumn fx:id="acaoColumn" sortable="false">
                    <graphic>
                        <Label text="Ação" />
                    </graphic>
                </TableColumn>
            </columns>
        </TableView>
    </children>
</VBox>
