                     <graphic>
                        <HBox alignment="CENTER_LEFT" spacing="22.0">
                           <children>
                              <FontAwesomeIcon fill="RED" glyphName="SIGN_OUT" size="26px" />
                              <Label styleClass="menu_text" text="Sair" textFill="RED">
                                 <font>
                                    <Font size="24.0" />
                                 </font>
                              </Label>
                           </children>
