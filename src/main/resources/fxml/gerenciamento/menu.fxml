<BorderPane stylesheets="@../../css/style.css" xmlns="http://javafx.com/javafx/21.0.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.carvalhotechsolutions.mundoanimal.controllers.gerenciamento.MenuController">
   <top>
      <HBox minHeight="100.0" styleClass="top_pane" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" maxWidth="300.0" minWidth="300.0" HBox.hgrow="NEVER">
               <children>
                  <ImageView fitHeight="77.0" fitWidth="148.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../assets/images/logo_sem_fundo.png" />
                     </image>
                  </ImageView>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
               <children>
                  <HBox alignment="CENTER_RIGHT" spacing="14.0">
                     <children>
                        <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../assets/images/profile.png" />
                           </image>
                        </ImageView>
                        <VBox maxHeight="-Infinity" maxWidth="-Infinity" spacing="4.0">
                           <children>
                              <Label id="top_pane_user_name" fx:id="userNameLabel" text="Fulano">
                                 <font>
                                    <Font name="System Bold" size="24.0" />
                                 </font>
                              </Label>
                              <Label id="top_pane_user_role" fx:id="userTypeLabel" text="Administrador">
                                 <font>
                                    <Font size="16.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets right="40.0" />
               </padding>
            </HBox>
         </children>
      </HBox>
   </top>
